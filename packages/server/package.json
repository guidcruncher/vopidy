{
  "name": "Vopidy-Server",
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts --color",
    "build": "NODE_ENV=development rm -rf ./dist && tsc --build . --pretty && tsc-alias",
    "build-production": "NODE_ENV=production rm -rf ./dist && tsc --build . --pretty && tsc-alias",
    "build-file": "NODE_ENV=development tsc --build . --pretty | sed -r \"s/\\x1B\\[([0-9]{1,3}(;[0-9]{1,2};?)?)?[mGK]//g\"  > ./dist/errors.txt && tsc-alias",
    "clean": "tsc --build --clean .",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix -o ./dist/lint.txt --no-color",
    "start": "node dist/index.js --color",
    "format": "prettier --config ./.prettierrc --write \"src/**/*.ts\" src/*.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/node-ws": "^1.2.0",
    "@hono/swagger-ui": "^0.5.2",
    "google-tts-api": "^2.0.2",
    "hono": "^4.9.9",
    "htmlparser2": "^10.0.0",
    "m3u-parser-generator": "^5.0.2",
    "mpd-api": "^1.1.3",
    "music-metadata": "^11.9.0",
    "node-cron": "^4.2.1",
    "node-ts-cache": "^4.4.0",
    "node-ts-cache-storage-memory": "^4.4.0",
    "promise-readable": "^8.0.1",
    "promise-socket": "^8.0.0",
    "pulseaudio.js": "^1.3.4",
    "simple-oauth2": "^5.1.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tracer": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.6.1",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "version": "0.61.0"
}
