{
  "name": "vopidy",
  "private": true,
  "type": "module",
  "version": "0.26.0",
  "scripts": {
    "dev": "vite --host --config ./vite-dev.config.mts --mode development",
    "build": "npm run type-check && npm run \"build-only {@}\"",
    "preview": "vite preview",
    "build-only": "NODE_ENV=development rm -rf ./dist && vite build --config ./vite-dev.config.mts --mode development",
    "build-production": "NODE_ENV=production rm -rf ./dist && vite build --config ./vite.config.mts --mode production",
    "build-watch": "NODE_ENV=development vite build --watch --config ./vite-dev.config.mts --mode development",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix -o ./dist/lint.txt --no-color",
    "format": "prettier --config ./.prettierrc --write src/"
  },
  "dependencies": {
    "@fontsource/roboto": "^5.2.6",
    "@mdi/font": "7.4.47",
    "@vueuse/core": "^13.8.0",
    "mitt": "^3.0.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate-2": "^2.0.31",
    "vue": "^3.5.20",
    "vuetify": "^3.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/devtools": "^8.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-vue": "^10.4.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "run-p": "^0.0.0",
    "sass-embedded": "^1.91.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "unplugin-auto-import": "^20.1.0",
    "unplugin-fonts": "^1.3.1",
    "unplugin-vue-components": "^29.0.0",
    "unplugin-vue-router": "^0.15.0",
    "vite": "^7.1.3",
    "vite-plugin-vue-devtools": "^8.0.1",
    "vite-plugin-vue-layouts-next": "^1.0.0",
    "vite-plugin-vuetify": "^2.1.2",
    "vue-router": "^4.5.0",
    "vue-tsc": "^3.0.6"
  }
}
